{
	"compilerOptions": {
		"module": "es2022",
		"target": "esnext",
		"lib": ["ES2022"],
		"declaration": true,
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
