generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrdersStatus {
  PENDING
  PROCESSING
  REPROVED
  APPROVED
  FINISHED
}

model Orders {
  id          String       @id @default(uuid())
  status      OrdersStatus @default(PENDING)
  description String
  value       Decimal
  userId      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now())
  deletedAt   DateTime?
}
